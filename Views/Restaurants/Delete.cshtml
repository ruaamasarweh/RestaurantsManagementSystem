@model Gp.Models.Restaurant

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-dark"><i class="bi bi-trash"></i> Delete Restaurant</h1>

    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="text-dark fw-bold">
                Are you sure you want to delete this restaurant? 
            </p>
            <dl class="row">
                <!-- Restaurant Name -->
                <dt class="col-sm-3 fw-bold">Restaurant Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RestaurantName)</dd>

                <!-- Image File Path -->
                <dt class="col-sm-3 fw-bold">Image File Path</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ImageFilePath)</dd>

                <!-- Owner -->
                <dt class="col-sm-3 fw-bold">Owner</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User!.FullName)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="RestaurantID" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
