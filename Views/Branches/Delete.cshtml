@model Gp.Models.Branch

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="text-center text-danger">Delete Branch</h1>
            <h4 class="text-center text-muted mb-4">Are you sure you want to delete this branch?</h4>

            <div class="border rounded p-3 bg-light">
                <dl class="row">
                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.LocationDescription)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.LocationDescription)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.phoneNumber)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.phoneNumber)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.ImageFilePath)
                    </dt>
                    <dd class="col-sm-9">
                        <img src="@Url.Content("~/" + Model.ImageFilePath)" alt="Branch Image" class="img-fluid rounded shadow-sm" style="max-width: 200px; height: auto;" />
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.OpenTime)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.OpenTime)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.CloseTime)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CloseTime)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.HasIndoorSeating)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.HasIndoorSeating)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.HasOutdoorSeating)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.HasOutdoorSeating)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.NumOfTables)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.NumOfTables)
                    </dd>

                    <dt class="col-sm-3 text-end fw-bold">
                        @Html.DisplayNameFor(model => model.Restaurant)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Restaurant!.RestaurantName)
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <form asp-action="Delete" class="me-3">
                    <input type="hidden" asp-for="BranchID" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
