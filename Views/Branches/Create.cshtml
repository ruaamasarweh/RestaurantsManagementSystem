@model Gp.Models.Branch

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="text-center">Create Branch</h1>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">Branch Details</h4>
            <hr />

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Location Description -->
                <div class="form-group">
                    <label asp-for="LocationDescription" class="form-label fw-bold"></label>
                    <input asp-for="LocationDescription" class="form-control" placeholder="Enter location description" />
                    <span asp-validation-for="LocationDescription" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="form-group mt-3">
                    <label asp-for="phoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="phoneNumber" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>

                <!-- Image Upload -->
                <div class="form-group mt-3">
                    <label asp-for="ImageFile" class="form-label fw-bold"></label>
                    <input asp-for="ImageFile" type="file" class="form-control" onchange="previewImage(event)" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <div class="mt-3 text-center">
                        <img id="imagePreview" class="img-fluid rounded shadow-sm" style="width: 200px; height: auto; display: none;" />
                    </div>
                </div>

                <!-- Open and Close Times -->
                <div class="form-group mt-3">
                    <label asp-for="OpenTime" class="form-label fw-bold"></label>
                    <input asp-for="OpenTime" type="time" class="form-control" />
                    <span asp-validation-for="OpenTime" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CloseTime" class="form-label fw-bold"></label>
                    <input asp-for="CloseTime" type="time" class="form-control" />
                    <span asp-validation-for="CloseTime" class="text-danger"></span>
                </div>

                <!-- Seating Options -->
                <div class="form-group mt-3">
                    <label class="form-label fw-bold">Seating Options</label>
                    <div class="form-check">
                        <input asp-for="HasIndoorSeating" type="checkbox" class="form-check-input" />
                        <label asp-for="HasIndoorSeating" class="form-check-label">Indoor Seating</label>
                    </div>
                    <div class="form-check mt-2">
                        <input asp-for="HasOutdoorSeating" type="checkbox" class="form-check-input" />
                        <label asp-for="HasOutdoorSeating" class="form-check-label">Outdoor Seating</label>
                    </div>
                    <span class="text-danger"></span>
                </div>

                <!-- Number of Tables -->
                <div class="form-group mt-3">
                    <label asp-for="NumOfTables" class="form-label fw-bold"></label>
                    <input asp-for="NumOfTables" type="number" class="form-control" placeholder="Enter number of tables" />
                    <span asp-validation-for="NumOfTables" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<script>
    function previewImage(event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var image = document.getElementById('imagePreview');
                image.src = e.target.result;
                image.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
