@model Gp.Models.DishCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Delete Category</h1>

    <h3 class="text-danger">Are you sure you want to delete this category?</h3>

    <div>
        <h4>DishCategory</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurant)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurant.RestaurantName)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DishCategoryID" />
        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger btn-block" />
            <a asp-action="Index" class="btn btn-outline-secondary mt-2 d-block">Back to List</a>
        </div>
    </form>
</div>
