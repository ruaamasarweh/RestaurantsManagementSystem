@model IEnumerable<Gp.Models.DishCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Categories</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Category</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DishCategoryID" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DishCategoryID" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DishCategoryID" class="btn btn-danger btn-sm">Delete</a> |
                        <a asp-action="SelectCategory" asp-controller="DishCategories" asp-route-categoryID="@item.DishCategoryID" asp-route-selectedAction="Index" asp-route-selectedController="Dishes" class="btn btn-outline-danger btn-sm">Dishes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
