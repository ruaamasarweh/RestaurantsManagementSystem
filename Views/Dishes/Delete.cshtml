@model Gp.Models.Dish

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center"><i class="bi bi-trash-fill"></i> Delete Dish</h1>

    <h3 class="text-danger">Are you sure you want to delete this?</h3>

    <div>
        <h4>Dish</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DishName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DishName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageFilePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageFilePath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Details)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Details)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DishCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DishCategory.Name)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="DishID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to List</a>
    </form>
</div>
