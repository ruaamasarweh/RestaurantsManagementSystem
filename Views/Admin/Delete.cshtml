@model Gp.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-dark"><i class="bi bi-trash"></i> Delete User</h1>

    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p class="text-dark"><strong>Are you sure you want to delete this user?</strong></p>
            <dl class="row">
                <!-- Full Name -->
                <dt class="col-sm-4 text-secondary">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                <!-- Username -->
                <dt class="col-sm-4 text-secondary">Username</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                <!-- Phone Number -->
                <dt class="col-sm-4 text-secondary">Phone Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNum)</dd>

                <!-- Address -->
                <dt class="col-sm-4 text-secondary">Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                <!-- Email -->
                <dt class="col-sm-4 text-secondary">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <!-- Password -->
                <dt class="col-sm-4 text-secondary">Password</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                <!-- User Type -->
                <dt class="col-sm-4 text-secondary">User Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserType.TypeName)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" class="mb-0">
                <input type="hidden" asp-for="UserID" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
